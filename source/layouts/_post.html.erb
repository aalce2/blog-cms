<div class="home-page-posts animated fadeIn ">

  <% page_articles.each_with_index do |article, i| %>
    <% path = "/#{article.date.strftime('%Y')}/#{article.date.strftime('%m')}/#{article.date.strftime('%d')}/#{article.title.split(" ").join("-").downcase}.html" %>
    <a href=<%= path %>>

      <article class="post">
      <div class="post-preview col-xs-10  no-gutter">
          <p><%= article.summary(350) %></p>
          <p class="meta">
          <p class="post-meta">Posted by <a href="http://twitter.com/brianllamar" target="_blank">
            Brian Douglas</a> on <%= article.date.strftime('%B %e, %Y') %>
        </p>
      </div>
    </article>
    </a>
  <% end %>

  <% if paginate && num_pages > 1 %>
    <p>Page <%= page_number %> of <%= num_pages %></p>

    <% if prev_page %>
      <p><%= link_to 'Previous page', prev_page %></p>
    <% end %>
  <% end %>

  <% if paginate %>
    <% if next_page %>
      <p><%= link_to 'Next page', next_page %></p>
    <% end %>
  <% end %>
</div>

